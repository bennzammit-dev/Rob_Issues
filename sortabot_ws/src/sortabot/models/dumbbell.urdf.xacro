<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dumbbell">

  <!-- WEIGHT PARAMETER -->
  <xacro:arg name="weight" default="10.0" />
  <!-- COLOR PARAMETER -->
  <xacro:arg name="color" default="red" />
  
  <link name="base_link"/>

  <link name="handle">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <link name="left_w">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="weight_color">
        <color rgba="
          <xacro:if value="$(arg color) == 'red'">1 0 0</xacro:if>
          <xacro:if value="$(arg color) == 'blue'">0 0 1</xacro:if>
          <xacro:if value="$(arg color) == 'green'">0 1 0</xacro:if>
          <xacro:if value="$(arg color) == 'yellow'">1 1 0</xacro:if>
          1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="$(arg weight)"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <link name="right_w">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
      <material name="weight_color">
        <color rgba="
          <xacro:if value="$(arg color) == 'red'">1 0 0</xacro:if>
          <xacro:if value="$(arg color) == 'blue'">0 0 1</xacro:if>
          <xacro:if value="$(arg color) == 'green'">0 1 0</xacro:if>
          <xacro:if value="$(arg color) == 'yellow'">1 1 0</xacro:if>
          1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="$(arg weight)"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="root_joint" type="fixed">
    <parent link="base_link"/>
    <child link="handle"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_left" type="fixed">
    <parent link="handle"/>
    <child link="left_w"/>
    <origin xyz="-0.095 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_right" type="fixed">
    <parent link="handle"/>
    <child link="right_w"/>
    <origin xyz="0.095 0 0" rpy="0 0 0"/>
  </joint>

</robot>
