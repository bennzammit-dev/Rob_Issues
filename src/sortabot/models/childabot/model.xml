<sdf version="1.9">
  <model name="childabot">
    <static>false</static>

    <!-- ================= BASE ================= -->
    <link name="base_link">
      <pose>0 0 0.2 0 0 0</pose>

      <inertial>
        <mass>6.0</mass>
        <inertia>
          <ixx>0.2</ixx>
          <iyy>0.2</iyy>
          <izz>0.2</izz>
        </inertia>
      </inertial>

      <collision>
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.4</length>
          </cylinder>
        </geometry>
      </collision>

      <visual>
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.4</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
        </material>
      </visual>
    </link>

    <!-- ================= LIDAR ================= -->
    <link name="lidar_link">
      <pose>0.2 0 0.3 0 0 0</pose>

      <sensor name="lidar" type="gpu_lidar">
        <update_rate>10</update_rate>
        <topic>scan</topic>

        <lidar>
          <horizontal>
            <samples>360</samples>
            <min_angle>-3.1416</min_angle>
            <max_angle>3.1416</max_angle>
          </horizontal>
          <range>
            <min>0.1</min>
            <max>8.0</max>
          </range>
        </lidar>
      </sensor>
    </link>

    <!-- ================= DIFF DRIVE ================= -->
    <plugin
      filename="gz-sim-diff-drive-system"
      name="gz::sim::systems::DiffDrive">
      <left_joint>base_link</left_joint>
      <right_joint>base_link</right_joint>
      <wheel_separation>0.4</wheel_separation>
      <wheel_radius>0.1</wheel_radius>
    </plugin>

  </model>
</sdf>

